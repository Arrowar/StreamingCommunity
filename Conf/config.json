{
    "DEFAULT": {
        "close_console": true,
        "show_message": true,
        "fetch_domain_online": true
    },
    "OUTPUT": {
        "root_path": "Video",
        "movie_folder_name": "Movie",
        "serie_folder_name": "Serie",
        "anime_folder_name": "Anime",
        "movie_format": "%(title_name) (%(title_year))",
        "episode_format": "%(episode_name) S%(season)E%(episode)",
        "season_format": "S%(season)",
        "add_siteName": false
    },
    "DOWNLOAD": {
        "skip_download": false,
        "thread_count": 8,
        "retry_count": 25,
        "concurrent_download": true,
        "max_speed": "",
        "select_video": "best",
        "select_audio": "lang='ita|Ita|it':for=best",
        "select_subtitle": "lang='ita|eng|Ita|Eng|it|en':for=all",
        "cleanup_tmp_folder": true
    },
    "PROCESS": {
        "generate_nfo": false,
        "use_gpu": false,
        "param_video": ["-c:v","libx265","-crf","28","-preset","medium"],
        "param_audio": ["-c:a","libopus","-b:a","128k"],
        "param_final": ["-c","copy"],
        "audio_order": [],
        "subtitle_order": [],
        "subtitle_disposition": false,
        "subtitle_disposition_language": ["forced-ita","ita-forced"],
        "merge_audio": true,
        "merge_subtitle": true,
        "extension": "mkv"
    },
    "REQUESTS": {
        "verify": false,
        "timeout": 30,
        "max_retry": 8,
        "use_proxy": false,
        "proxy": {
            "http": "http://localhost:8888",
            "https": "http://localhost:8888"
        }
    },
    "HOOKS": {
        "pre_run": [],
        "post_run": [],
        "post_download": [
            {
                "name": "post-download-env",
                "type": "python",
                "path": "/app/end.py",
                "args": [
                    "{download_path}"
                ],
                "env": {
                    "MY_FLAG": "1"
                },
                "cwd": "~",
                "os": [
                    "linux"
                ],
                "timeout": 60,
                "enabled": true,
                "continue_on_error": true
            }
        ]
    }
}